  <tr>
    <th>Title</th>
    <th>Annotation</th>
    <th>Body</th>
    <th>Published at</th>
    <th>Site</th>
  </tr>

<% for news in @news %>
  <tr>
    <td><%=h news.title %></td>
    <td><%=h news.annotation %></td>
    <td><%=h news.body %></td>
    <td><%=h news.published_at %></td>
    <td><%=h news.site %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

